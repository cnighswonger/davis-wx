#!/bin/bash
set -e

case "$1" in
    remove|upgrade)
        # Remove the venv (will be recreated on upgrade)
        rm -rf /opt/davis-wx/backend/.venv
        ;;
    purge)
        # Remove data, config, and system user on purge
        rm -rf /var/lib/davis-wx
        rm -rf /etc/davis-wx
        rm -rf /opt/davis-wx
        deluser --quiet davis 2>/dev/null || true
        ;;
esac

#DEBHELPER#
exit 0
