# Davis Weather Station Configuration
# Copy to .env and edit as needed

# Serial port settings
DAVIS_SERIAL_PORT=/dev/ttyUSB0
DAVIS_BAUD_RATE=19200
DAVIS_SERIAL_TIMEOUT=1.2

# Server settings
DAVIS_HOST=0.0.0.0
DAVIS_PORT=8000

# Polling
DAVIS_POLL_INTERVAL_SEC=5

# Database
DAVIS_DB_PATH=weather.db

# Location (for astronomy and NWS forecasts)
DAVIS_LATITUDE=
DAVIS_LONGITUDE=
DAVIS_ELEVATION_FT=0

# NWS API
DAVIS_NWS_ENABLED=false

# METAR output
DAVIS_METAR_ENABLED=false
DAVIS_METAR_STATION_ID=KWXS

# UI theme (dark, light, classic)
DAVIS_THEME=dark
